<h1>Νεό όνομα χώρου</h1>
<div class="row">
  <div class="span6 offset3">

<%= form_for @domain, :html => { :class => "form-horizontal" } do |f| %>

	<% if @domain.errors.any? %>
	  <div id="error_explanation">
	    <div class="alert alert-error">
	      The form contains <%= pluralize(@domain.errors.count, "error") %>.
	    </div>
	    <ul>
	    <% @domain.errors.full_messages.each do |msg| %>
	      <li>* <%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

    <fieldset>
        <div class="control-group">
            <%= f.label "Όνομα", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :name %></div><br />
          
            <%= f.label "Κατοχύρωση", :class=>"control-label" %>
             <div class="controls"><%= f.text_field :registration , :tabindex => 70, :class =>"datepicker" %></div><br />
          
            <%= f.label "Λήξη", :class=>"control-label" %>
             <div class="controls"><%= f.text_field :expiration, :class =>"datepicker" %></div><br />
          
            <%= f.label "Ανανέωση", :class=>"control-label" %>
             <div class="controls"><%= f.text_field :renewal, :class =>"datepicker" %></div><br />
          
            <%= f.label "Ιδιοκτήτης", :class=>"control-label" %>
             <div class="controls"><%= collection_select(:domain, :customer_id, Customer.all, :id, :name, {:prompt => 'Επιλογή ιδιοκτήτη'}) %></div><br />

            <%#= f.select("customer", "customer_id", Customer.all.collect {|p| [ p.name, p.id ] }, 
            	{:include_blank => 'None'})
            %>
            <%#= options_from_collection_for_select(Customer.all, :id, :name) %>
            <%#= f.text_field @customers %>

            <div class="form-actions">
                <%= f.submit "Καταχώρηση", class: "btn btn-medium btn-primary" %>
                <%= link_to 'Back', domains_path %>
            </div>
        </div> <!-- .control-group -->
    </fieldset>
    <% end %>

</div>
</div>