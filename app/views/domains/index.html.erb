<h1>Ονόματα χώρου</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th>Α/Α</th>
    <th>Όνομα</th>
    <th>Κατάσταση</th>
    <th>Λήξη</th>
    <th>Ιδιοκτήτης</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @aa=0 %>
<% @domains.each do |domain| %>
  <tr>
    <td><%= @aa = @aa+1 %></td>
    <td><%= domain.name %></td>
    <td><%= domain.status %></td>
    <td><%= domain.expiration %></td>
    <td><%= domain.customer.name %></td>
    <td><%= link_to 'Περισσότερα', domain, :class=>'btn btn-medium' %></td>
    <td><%= link_to 'Επεξεργασία',edit_domain_path(domain), :class=>'btn btn-medium' %></td>
    <td><%= link_to 'Διαγραφή', domain, confirm: 'Είστε σίγουρος?', method: :delete, :class=>'btn btn-medium btn-danger' %></td>
  </tr>
  </tr>
<% end %>
</table>

