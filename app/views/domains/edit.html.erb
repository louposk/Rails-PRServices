<h1>Επεξεργασία ονόματος χώρου</h1>

<div class="row">
  <div class="span6 offset3">

<%= form_for @domain, :html => { :class => "form-horizontal" } do |f| %>

	<% if @domain.errors.any? %>
	  <div id="error_explanation">
	    <div class="alert alert-error">
	      The form contains <%= pluralize(@domain.errors.count, "error") %>.
	    </div>
	    <ul>
	    <% @domain.errors.full_messages.each do |msg| %>
	      <li>* <%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

    <%= f.label "Όνομα χώρου" %>
    <%= f.text_field :name %>
  
    <%= f.label "Κατοχύρωση" %>
    <%= f.text_field :registration, :class =>"datepicker" %>

    <%= f.label "Ανανέωση" %>
    <%= f.text_field :renewal, :class =>"datepicker" %>
  
    <%= f.label "Λήξη" %>
    <%= f.text_field :expiration, :class =>"datepicker" %>

    <%= f.label "DNS 1" %>
    <%= f.text_field :dns1 %>
     
    <%= f.label "DNS 2" %>
    <%= f.text_field :dns2 %>

    <%= f.label "Κωδικός εξουσιοδότησης" %>
    <%= f.text_field :epp %>

    <%= f.label "Κατάσταση" %>
    <%= f.text_field :status %>
  
    <%= f.label "Ιδιοκτήτης" %><br />
    <%= collection_select(:domain, :customer_id, Customer.all, :id, :name, {:prompt => 'Επιλογή ιδιοκτήτη'}) %>
    <%#= f.select("customer", "customer_id", Customer.all.collect {|p| [ p.name, p.id ] }, 
    	{:include_blank => 'None'})
    %>
    <%#= options_from_collection_for_select(Customer.all, :id, :name) %>
    <%#= f.text_field @customers %>


      <br /><%= f.submit "Ενημέρωση ονόματος", class: "btn btn-medium btn-primary" %>
    <% end %>


<%= link_to 'Επιστροφή', domains_path, :class=>'btn btn-medium'  %>

</div>
</div>