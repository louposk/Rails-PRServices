<p>
  <b>Name:</b>
  <%= @customer.name %>
</p>

<p>
  <b>Email:</b>
  <%= @customer.email %>
</p>

<p>
  <b>Address:</b>
  <%= @customer.address %>
</p>

<p>
  <b>Tel:</b>
  <%= @customer.tel %>
</p>

<p>
  <b>Afm:</b>
  <%= @customer.afm %>
</p>

<table class="table table-striped table-condensed">
  <tr>
    <th>A/A</th>
    <th>Όνομα</th>
    <th>Κατοχύρωση</th>
    <th>Λήξη</th>
    <th>Ανανέωση</th>
    <th>Πελάτης</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @aa=0 %>
<% @customer.hostings.each do |hosting| %>
  <tr>
    <td><%= @aa = @aa+1 %></td>
    <td><%= hosting.name %></td>
    <td><%= hosting.registration %></td>
    <td><%= hosting.expiration %></td>
    <td><%= hosting.renewal %></td>
    <td><%= hosting.customer.name %></td>
    <td><%#= link_to 'Περισσότερα', hosting, :class=>'btn btn-medium' %></td>
    <td><%= link_to 'Επεξεργασία', edit_hosting_path(hosting), :class=>'btn btn-medium' %></td>
    <td><%= link_to 'Διαγραφή', hosting, confirm: 'Είστε σίγουρος?', method: :delete, :class=>'btn btn-medium btn-danger' %></td>
  </tr>
<% end %>
</table>



