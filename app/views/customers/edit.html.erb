<h1>Επεξεργασία πελάτη</h1>


<div class="row">
  <div class="span6 offset3">


    <!-- Form errors messages -->
    <%= render 'shared/error_messages' %>


    <%= form_for(@customer) do |f| %>

      <%= f.label "Όνομα" %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label "Διεύθυνση" %>
      <%= f.text_field :address %>
      
      <%= f.label "Τηλέφωνο" %>
      <%= f.text_field :tel %>
      
      <%= f.label "ΑΦΜ" %>
      <%= f.text_field :afm %>

      <br /><%= f.submit "Ενημέρωση στοιχείων", class: "btn btn-nedium btn-primary" %>

    <% end %>



<%= link_to 'Αναλυτικά στοιχεία', @customer, :class=>'btn btn-medium' %> |
<%= link_to 'Επιστροφή', customers_path, :class=>'btn btn-medium' %>

</div>
</div>
