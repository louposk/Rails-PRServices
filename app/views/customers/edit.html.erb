<h1>Επεξεργασία πελάτη</h1>


<div class="row">
  <div class="span6 offset3">


    <!-- Form errors messages -->
    <%= render 'shared/error_messages' %>


    <%= form_for(@customer) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :address %>
      <%= f.text_field :address %>
      
      <%= f.label :tel %>
      <%= f.text_field :tel %>
      
      <%= f.label :afm %>
      <%= f.text_field :afm %>

      <br /><%= f.submit "Ενημέρωση στοιχείων", class: "btn btn-nedium btn-primary" %>

    <% end %>



<%= link_to 'Show', @customer %> |
<%= link_to 'Back', customers_path %>

</div>
</div>
