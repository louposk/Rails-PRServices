<h1>Νέος πελάτης</h1>
<div class="row">
  <div class="span6 offset3">

  	<!-- Form errors messages -->

    <%= form_for @customer, :html => { :class => "form-horizontal" } do |f| %>
    <%= render 'shared/error_messages' %>

    <fieldset>
        <div class="control-group">
            <%= f.label "Ονοματεπώνυμο", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :name %></div><br />

            <%= f.label "Email", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :email %></div><br />

            <%= f.label "Διεύθυνση", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :address %></div><br />
            
            <%= f.label "Τηλέφωνο", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :tel %></div><br />
            
            <%= f.label "ΑΦΜ", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :afm %></div><br />

            <!--<%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation %> -->

            <div class="form-actions">
                <%= f.submit "Δημιουργία χρήστη", class: "btn btn-nedium btn-primary" %>
            </div>
        </div> <!-- .control-group -->
    </fieldset>
          <% end %>
  </div> <!-- .span offset3 -->
</div>

<%= link_to 'Back', customers_path %>
