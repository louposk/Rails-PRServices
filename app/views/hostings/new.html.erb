<h1>Δημιουργία νέου πακέτου</h1>

<div class="row">
  <div class="span6 offset3">


<%= form_for @hosting, :html => { :class => "form-horizontal" } do |f| %>

	<% if @hosting.errors.any? %>
	  <div id="error_explanation">
	    <div class="alert alert-error">
	      The form contains <%= pluralize(@hosting.errors.count, "error") %>.
	    </div>
	    <ul>
	    <% @hosting.errors.full_messages.each do |msg| %>
	      <li>* <%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>
    <fieldset>
        <div class="control-group">
            <%= f.label "Όνομα", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :name %></div><br />
          
            <%= f.label "Κατοχύρωση", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :registration, :class =>"datepicker" %></div><br />
          
            <%= f.label "Ανανέωση", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :renewal, :class =>"datepicker" %></div><br />

            <%= f.label "Τιμή", :class=>"control-label" %>
            <div class="controls"><%= f.text_field :price %></div><br />

            <%= f.label "Ιδιοκτήτης", :class=>"control-label" %>
            <div class="controls"><%= collection_select(:hosting,  :customer_id, Customer.all, :id, :name, {:prompt => 'Επιλογή ιδιοκτήτη'}) %></div><br />
            
            <div class="form-actions">
                <%= f.submit "Δημιουργία πακέτου", class: "btn btn-nedium btn-primary" %>
                <%= link_to 'Επιστροφή', hostings_path %>

            <div>

            <%= f.hidden_field :status, { :value => "active" } %>

          </div> <!-- .control-group -->
      </fieldset>
    <% end %>

</div>
</div>
