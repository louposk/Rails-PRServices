<h1>Δημιουργία νέου πακέτου</h1>

<div class="row">
  <div class="span6 offset3">


<%= form_for @hosting, :html => { :class => "form-horizontal" } do |f| %>

	<% if @hosting.errors.any? %>
	  <div id="error_explanation">
	    <div class="alert alert-error">
	      The form contains <%= pluralize(@hosting.errors.count, "error") %>.
	    </div>
	    <ul>
	    <% @hosting.errors.full_messages.each do |msg| %>
	      <li>* <%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

    <%= f.label "Όνομα" %>
    <%= f.text_field :name %>
  
    <%= f.label "Κατοχύρωση" %><br />
    <%= f.datepicker :registration , :tabindex => 70 %>
  
    <%= f.label "Λήξη" %><br />
    <%= f.datepicker :expiration %>
  
    <%= f.label "Ανανέωση" %><br />
    <%= f.datepicker :renewal %>
  
    <%= f.label "Ιδιοκτήτης" %><br />
    <%= collection_select(:hosting, :customer_id, Customer.all, :id, :name, {:prompt => 'Επιλογή ιδιοκτήτη'}) %>
    <%#= f.select("customer", "customer_id", Customer.all.collect {|p| [ p.name, p.id ] }, 
    	{:include_blank => 'None'})
    %>
    <%#= options_from_collection_for_select(Customer.all, :id, :name) %>
    <%#= f.text_field @customers %>


      <br /><%= f.submit "Δημιουργία πακέτου", class: "btn btn-nedium btn-primary" %>
    <% end %>

<%= link_to 'Back', hostings_path %>
</div>
</div>
