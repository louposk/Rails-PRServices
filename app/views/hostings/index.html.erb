        <td><%= link_to 'Επεξεργασία', edit_hosting_path(hosting), :class=>'btn btn-medium' %></td>
        <td><%= link_to 'Διαγραφή', hosting, confirm: 'Είστε σίγουρος?', method: :delete, :class=>'btn btn-medium btn-danger' %></td>
      </tr>
      
