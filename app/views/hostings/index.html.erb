    <% @hostings.each do |hosting| %>
      <tr>
        <td><i class='<%= status(Hosting,hosting.id,hosting.renewal) %>'></i></td>
        <td><%= hosting.name %></td>
        <td><%= hosting.registration %></td>
        <td><%= hosting.renewal%></td>
        <td><%= hosting.customer.name %></td>
        <td><%= hosting.price %>€</td>
